version: '3.9'

services:
  redis-service:
    image: redis:7-alpine
    container_name: transport-redis-prod
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    command: redis-server --appendonly yes --maxmemory 256mb --maxmemory-policy allkeys-lru
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 3s
      retries: 3
    networks:
      - transport-network
    restart: unless-stopped

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
      args:
        NODE_ENV: production
    image: transport-backend:latest
    container_name: transport-backend-prod
    ports:
      - "3000:3000"
    env_file:
      - .env
    environment:
      NODE_ENV: production
      PORT: 3000
      REDIS_URL: redis://redis-service:6379
      ALLOWED_ORIGINS: ${ALLOWED_ORIGINS:-http://localhost:3001}
      TOMTOM_API_KEY: ${TOMTOM_API_KEY}
      OPENCAGE_API_KEY: ${OPENCAGE_API_KEY}
      ORS_API_KEY: ${ORS_API_KEY}
      CACHE_TTL: ${CACHE_TTL:-3600}
      MAX_WALKING_DISTANCE: ${MAX_WALKING_DISTANCE:-800}
      TRANSFER_PENALTY: ${TRANSFER_PENALTY:-180}
      WALKING_SPEED: ${WALKING_SPEED:-1.4}
      REQUEST_TIMEOUT: ${REQUEST_TIMEOUT:-20000}
    volumes:
      - ./backend/logs:/app/logs
    depends_on:
      redis-service:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:3000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - transport-network
    restart: unless-stopped

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
      args:
        REACT_APP_API_URL: http://localhost:3000
        REACT_APP_TOMTOM_API_KEY: ${TOMTOM_API_KEY}
    image: transport-frontend:latest
    container_name: transport-frontend-prod
    ports:
      - "3001:80"
    depends_on:
      backend:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost/"]
      interval: 30s
      timeout: 3s
      retries: 3
    networks:
      - transport-network
    restart: unless-stopped

  prometheus:
    image: prom/prometheus:latest
    container_name: transport-prometheus-prod
    ports:
      - "9090:9090"
    volumes:
      - ./prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prometheus-data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention.time=30d'
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:9090/-/healthy"]
      interval: 30s
      timeout: 3s
      retries: 3
    networks:
      - transport-network
    restart: unless-stopped

  grafana:
    image: grafana/grafana:latest
    container_name: transport-grafana-prod
    ports:
      - "3002:3000"
    environment:
      GF_SECURITY_ADMIN_USER: ${GF_ADMIN_USER:-admin}
      GF_SECURITY_ADMIN_PASSWORD: ${GF_ADMIN_PASSWORD:-admin}
      GF_USERS_ALLOW_SIGN_UP: "false"
      GF_SERVER_ROOT_URL: ${GF_ROOT_URL:-http://localhost:3002}
    volumes:
      - grafana-data:/var/lib/grafana
    depends_on:
      - prometheus
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:3000/api/health"]
      interval: 30s
      timeout: 3s
      retries: 3
    networks:
      - transport-network
    restart: unless-stopped

volumes:
  redis-data:
    driver: local
  prometheus-data:
    driver: local
  grafana-data:
    driver: local

networks:
  transport-network:
    driver: bridge