pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/zineb-chgari/traffic_optimizer.git']]
                ])
                script {
                    // DÃ©clarer la variable correctement
                    def COMMIT_SHORT = bat(
                        returnStdout: true, 
                        script: '"C:\\Program Files\\Git\\cmd\\git.exe" rev-parse --short HEAD'
                    ).trim()
                    env.COMMIT_SHORT = COMMIT_SHORT
                    echo "Current commit: ${env.COMMIT_SHORT}"
                }
            }
        }

        stage('Check Git & Docker') {
            steps {
                bat '"C:\\Program Files\\Git\\cmd\\git.exe" --version'
                bat '"C:\\Program Files\\Docker\\Docker\\resources\\bin\\docker.exe" --version'
            }
        }

        stage('Build Frontend Docker') {
            steps {
                script {
                    bat "\"C:\\Program Files\\Docker\\Docker\\resources\\bin\\docker.exe\" build -f frontend/Dockerfile -t traffic_front:${env.COMMIT_SHORT} frontend"
                }
            }
        }

        stage('Build Backend Docker') {
            steps {
                script {
                    bat "\"C:\\Program Files\\Docker\\Docker\\resources\\bin\\docker.exe\" build -f backend/Dockerfile -t traffic_back:${env.COMMIT_SHORT} backend"
                }
            }
        }

        stage('Deploy with Ansible (Placeholder)') {
            steps {
                echo "[INFO] Ansible deployment placeholder"
            }
        }

        stage('Provision Infra with Terraform (Placeholder)') {
            steps {
                echo "[INFO] Terraform provisioning placeholder"
            }
        }

        stage('Deploy to Kubernetes (Placeholder)') {
            steps {
                echo "[INFO] Kubernetes deployment placeholder"
            }
        }
    }

    post {
        always {
            echo "[INFO] Cleaning up Docker..."
            bat '"C:\\Program Files\\Docker\\Docker\\resources\\bin\\docker.exe" system prune -f || exit 0'
        }
        success {
            echo "[SUCCESS] Pipeline finished successfully!"
        }
        failure {
            echo "[ERROR] Pipeline failed!"
        }
    }
}
